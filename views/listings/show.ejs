<% layout("listings/layouts/boilerplate.ejs") -%>
<body>
    <h2>Welcome to Wanderlust</h2>
    <ul>
        <li><%=listing.title %></li>
        <li><%=listing.description %></li>
        <li>
            &#8377 <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
        </li> <!-- Note: The use of this toLocaleString function is used to convert the price in Indian Rupee currency format -->
        <li><%=listing.location %></li>
        <li><%=listing.country %></li>
    </ul>

    <form method="GET" action = "/listings/<%=listing._id %>/edit">
        <button>Edit Listing</button>
    </form>

    <br>

    <form method="POST" action="/listings/<%=listing._id %>?_method=DELETE" ><button>Delete Listing</button"></form>  <!-- this is the way to override the https request other than GET and POST -->

</body>
